<Page
    x:Class="Mitama.Pages.Main.AddNewMemberDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Orientation="Vertical">
        <TextBox PlaceholderText="Name" SelectionChanged="NameBox_OnSelectionChanged" Margin="10"/>
        <ComboBox PlaceholderText="Position" SelectionChanged="PositionBox_OnSelectionChanged" Margin="10">
            <x:String>N.Attacker</x:String>
            <x:String>Sp.Attacker</x:String>
            <x:String>Buffer</x:String>
            <x:String>DeBuffer</x:String>
            <x:String>Healer</x:String>
        </ComboBox>
    </StackPanel>
</Page>
